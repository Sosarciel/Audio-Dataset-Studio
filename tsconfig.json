{
    "compilerOptions": {
        "target": "ES6",
        "allowJs": true,
        "module": "commonjs",
        "skipLibCheck": true,
        "esModuleInterop": true,
        "noImplicitAny": true,
        "sourceMap": true,
        "baseUrl": ".",
        "outDir": "dist",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "strict": true,
        "jsx": "react-jsx",
        "paths": {
            "*": ["node_modules/*"],
            "@/src/*": ["./src/*"],
            "@/*": ["./*"],
            "@": ["./src/index"],
            "Backend" : ["src/Backend"],
            "Frontend": ["./src/Frontend"]
        }
    },
    "include": [
        "./src/**/*.ts",
        "./src/**/*.tsx",
        "webpack.plugins.ts",
        "forge.config.ts"
    ],
    "exclude": ["./node_modules/**/*"]
}
